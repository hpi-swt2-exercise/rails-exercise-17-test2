<h1>Edit author</h1>

 <%= form_for :author, url: author_path(@author), method: :patch do |f| %>
  
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>
 
  <p>
    <%= f.label :last_name %><br>
    <%= f.text_area :last_name %>
  </p>
 
  <p>
    <%= f.label :homepage %><br>
    <%= f.text_area :homepage %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', authors_path %>